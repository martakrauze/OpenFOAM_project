FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];


internalField   uniform 313.15;

boundaryField
{
    floor
    {
        type            fixedValue;
        value           uniform 315.65;
    }
    ceiling
    {
        type            fixedValue;
        value           uniform 310.65;
    }
    fixedWalls
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
}


